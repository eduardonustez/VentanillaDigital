@page "/forget"

<div class="row shadow p-3 mb-5 bg-white rounded square-form">
    <div class="col-12">
        <h3>Recuperación de Contraseña</h3>
        <p>Para restablecer su contraseña, ingrese el correo electrónico de su registro</p>

        <EditForm Model="@account" OnValidSubmit="HandleReestablecerContrasena">
            <div class="input-container">
                <label>Correo electrónico</label>
                <input type="email" @bind="@account.Email" placeholder="jhon.doe@notaria.com" required />
            </div>
            @if (!esEnlaceEnviado)
            {
                if (!string.IsNullOrEmpty(ForgetMessage))
                {
                    <div class="mensaje-container mensaje-error">
                        <p>@ForgetMessage</p>
                    </div>
                }
            }

            <!-- Inicio ventana Modal -->
            <div class="modal @ModalClass" data-backdrop="static" tabindex="-1"
                 aria-labelledby="modalForAtdp" aria-hidden="true" style="display:@ModalDisplay">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="ventanilla-subtitle">Restablecer Contraseña</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Correo de restablecimiento de contraseña enviado:</p>
                            <div class="d-flex justify-content-center mb-3">
                                <p>@ForgetMessage</p>
                            </div>
                            <div class="d-flex justify-content-around">
                                <button type="button" class="btn-primario" data-dismiss="modal" @onclick="() => Close()">Aceptar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (ShowBackdrop)
            {
                <div class="modal-backdrop fade show"></div>
            }
            <!-- fin de Ventana Modal-->

            <div class="text-center mt-2">
                <button type="submit" class="btn-primario" hidden=@esEnlaceEnviado>Restablecer Contraseña</button>
            </div>
        </EditForm>
        <div class="text-center mt-2">
            <a class="link-primario" href="/" role="button">Regresar</a>
        </div>
        <div class="text-center mt-2">
            <span>Desarrollado por</span><img class="logo-olimpia ml-1" src="./images/logo-olimpia-color.svg">
        </div>

    </div>
</div>