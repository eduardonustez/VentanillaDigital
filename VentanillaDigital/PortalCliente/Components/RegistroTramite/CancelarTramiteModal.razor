@* <div style="position: absolute;top:0;left:0;bottom:0;right:0;"> *@
<div class="modal @ModalClass" id="cancelarTramiteModal" tabindex="-1" role="dialog"
    aria-labelledby="cancelarTramiteModalLabel" aria-hidden="true" style="display:@ModalDisplay">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Cancelar trámite actual</h3>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="message-text" class="col-form-label">Seleccione el motivo de cancelación:</label>
                    <select name="lsMotivos" id="lsMotivos" @bind="motivoSelec" class="form-control">
                        <option disabled selected>--Seleccione--</option>
                        @foreach (KeyValuePair<int, string> item in opcMotivo)
                        {
                            <option value="@item.Key">@item.Value</option>  
                        } 
                    </select>
                    @if (motivoSelec==4)
                    {
                        <p>¿Cuál?</p>
                        <textarea class="form-control" id="message-text" @bind="MotivoCancelacion"
                        @bind:event="oninput"></textarea>    
                    }
                </div>
                <div class="d-flex justify-content-around mt-3">
                    <button type="button" class="btn-contorno-primario" data-dismiss="modal"
                        @onclick="() => Close()">Volver</button>
                    <button type="button" class="btn-primario" data-dismiss="modal"
                        disabled="@(motivoSelec==0 || (motivoSelec==4 && string.IsNullOrWhiteSpace(MotivoCancelacion)))" @onclick="setMotivoCancelacion">
                        Cancelar
                        trámite
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}
@* </div> *@