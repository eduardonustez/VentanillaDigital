<form Model="documentoPrivado" @oninput="oninput">
    <div class="input-container">
        <label>Acto(s)</label>
        <textarea @bind-value="documentoPrivado.ActoNotarial" @bind-value:event="oninput"/>
    </div>
    <div class="input-container">
        <label>Firmantes</label>
        <textarea @bind-value="documentoPrivado.Firmantes" @bind-value:event="oninput"/>
    </div>
    <div class="input-container">
        <label>Detalles</label>
        <textarea @bind-value="documentoPrivado.DetalleDeActo" @bind-value:event="oninput"/>
    </div>
</form>
