@page "/NewPassword/"

<div class="row shadow p-3 mb-5 bg-white rounded square-form">
    <div class="col-12">
        <h2 class="text-center">Crear Contraseña</h2>
        <!-- Inicio ventana Modal -->
        <div class="modal @ModalClass" data-backdrop="static" tabindex="-1"
             aria-labelledby="modalForAtdp" aria-hidden="true" style="display:@ModalDisplay">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="ventanilla-subtitle">Contraseña reestablecida</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="d-flex justify-content-center mb-3">
                            <p>Actualización de contraseña Exitosa</p>
                        </div>
                        <div class="d-flex justify-content-around">
                            <button type="button" class="btn-primario" data-dismiss="modal" @onclick="() => Close()">Aceptar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (ShowBackdrop)
        {
            <div class="modal-backdrop fade show"></div>
        }
        <!-- fin de Ventana Modal-->

    <form @onsubmit="HandleCambiarContrasena">
        <div class="password-rules">
            <h6>Las contraseñas deben tener al menos 8 caracteres y contener al menos un carácter de cada tipo: </h6>
            <ul>
                <li>Carácteres en mayúscula (A-Z)</li>
                <li>Carácteres en minúscula (a-z)</li>
                <li>Números (0-9)</li>
                <li>Carácteres especiales (e.j. !@@#$%,^&*)</li>
            </ul>
        </div>
        <strong>Contraseña</strong>
        <input type="password" class="form-control bg-col mb-3" @bind="@pass" placeholder="******" required />
        <strong>Confirma tu Contraseña</strong>
        <input type="password" class="form-control bg-col" @bind="@confirpass" placeholder="******" required />
        @if (banFail)
        {
            <div class="mensaje-container mensaje-error">
                <p>@NewPasswordMessage</p>
            </div>
        }
        <div class="text-center mt-2">
            <button type="submit" class="btn-primario">Aceptar</button>
        </div>
    </form>
        <div class="text-center mt-2">
            <span>Desarrollado por</span><img class="logo-olimpia ml-1" src="./images/logo-olimpia-color.svg">
        </div>

    </div>
</div>